
@{
    @model Brands
    ViewData["Title"] = "Edit";
}


<form method="post" class="mt-4" enctype="multipart/form-data">
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-12 col-md-7">

                @if (Model.IsOnePage)
                {
                    <div class="form-group">
                        <label asp-for="OnePagePhoto">Məlumat Şəklini seçin</label>
                        <div class="uploadArea">
                            <div class="uploadImageThird d-flex justify-content-center align-items-center">
                                <i class="fal fa-cloud-upload"></i>
                            </div>
                        </div>
                        <input class="uploadInputThird form-control" asp-for="OnePagePhoto" accept="image/*" />
                        <span asp-validation-for="OnePagePhoto" class="text-danger"></span>
                        <p class="file-view-third">Şəkil seçildi</p>

                    </div>

                    <div class="form-group">
                        <label asp-for="OnePageInfo">Haqqında</label>
                        <textarea asp-for="OnePageInfo" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="OnePageInfo" class="text-danger"></span>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Name">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FloorId">Mərtəbə</label>
                    <select asp-for="FloorId" asp-items="@(new SelectList(ViewBag.Floor,"Id","Name"))" style="width:100%; padding: 10px;"></select>
                    <span asp-validation-for="FloorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TagsId">Kateqoriya</label>
                    <p style="font-size:14px; color:#062fa1">Çoxlu sayda seçmək üçün "ctrl" düyməsini basılı saxlayın.</p>
                    <select asp-for="TagsId" asp-items="@(new SelectList(ViewBag.Tag,"Id","Name"))" multiple style="width:100%; padding: 10px;"></select>
                    <span asp-validation-for="TagsId" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="Phone">Telefon</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FacebookLink">Facebook</label>
                    <input asp-for="FacebookLink" class="form-control" />
                    <span asp-validation-for="FacebookLink" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InstagramLink">İnstagram</label>
                    <input asp-for="InstagramLink" class="form-control" />
                    <span asp-validation-for="InstagramLink" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Website">Sayt</label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-5">
                <div class="form-group">
                    <label asp-for="Photo" class="d-block text-right">Əyləncə Mərkəzinin Şəklini dəyişin</label>
                    <div class="photo-convert">
                        <img src="~/img/@Model.PhotoURL" />
                        <div class="uploadImage custom-upload-image">
                            <i class="fal fa-camera-alt"></i>
                        </div>
                    </div>

                    <input id="uploadInput" asp-for="Photo" accept="image/*" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                    <p class="file-view">Şəkil seçildi.</p>
                </div>
            </div>
            <div class="col-12">
                <input type="submit" class="btn-create" value="Dəyiş" />
            </div>

        </div>
    </div>
</form>
        
       
 
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



