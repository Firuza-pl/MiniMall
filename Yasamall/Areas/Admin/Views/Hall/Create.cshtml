
@{
    @model Halls
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Zal Yarat</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-2"></div>
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="Name">Ad</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BrandId">Nömrə</label>
                                <select asp-for="BrandId" style="width:100%;padding:10px 20px;" asp-items="@(new SelectList(ViewBag.Brands, "Id", "Name"))">
 
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btn-create" value="Yarat" />
                        </form>
                    </div>
                    <div class="col-12 col-md-2"></div>
                </div>
            </div>
        </div>

    </div>

</div>

